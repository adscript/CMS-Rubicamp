<% include ./partials/header %>
<script src="https://kit.fontawesome.com/d8ee6b40b3.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="/stylesheets/formfloat.css" type="text/css">
</head>

<body>
    <% include ./partials/navbar %>

    <div class="jumbotron jumbotron-fluid bg-white">
        <div class="container">
            <div class="row p-4 align-middle mb-2 getBG">
                <div class="col-2">
                    <div class="row">
                        <a role="button" class="btn btn-primary text-white p-2 mt-1 addData" href=""><i
                                class="fas fa-plus"></i>
                            Add</a>
                        <a role="button" class="btn btn-danger text-white p-2 mt-1 beforeAdd" href="" id="cancelData"
                            style="display: none;"><i class="fas fa-times"></i> Cancel</a>
                    </div>
                </div>
                <div class="col-10">
                    <form class="form-row beforeAdd saveData" style="display: none;">
                        <div class="col-4">
                            <div class="form-label-group">
                                <input type="text" id="letter" class="form-control " placeholder="Letter" required
                                    autofocus>
                                <label for="addLetter">Letter</label>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-label-group">
                                <input type="number" step="0.01" id="frequency" class="form-control"
                                    placeholder="Frequency" required autofocus>
                                <label for="addFrequency">Frequency</label>
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="form-label-group">
                                <button type="submit" class="btn btn-primary text-white p-2 mt-1" href=""><i
                                        class="fas fa-save"></i> Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <h2>Search</h2>
            <hr />
            <form class="form-row searchData mb-2">
                <div class="col-4">
                    <div class="form-label-group">
                        <input type="text" id="letterSearch" class="form-control" placeholder="Letter" 
                            autofocus>
                        <label for="addLetter">Letter</label>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-label-group">
                        <input type="number" step="0.01" id="frequencySearch" class="form-control"
                            placeholder="Frequency"  autofocus>
                        <label for="addFrequency">Frequency</label>
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-label-group">
                        <button type="submit" class="btn btn-primary text-white p-2 mt-1" href=""><i
                                class="fas fa-search"></i></button>
                    </div>
                </div>
            </form>


            <div class="alert alert-success alert-dismissible fade show successMessage col-12" role="alert"
                style="display: none;">
                <a role="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </a>
            </div>
            <div class="alert alert-danger alert-dismissible failedMessage col-12" role="alert" style="display: none;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <table class="table" id="viewTable">
                <div class="alert alert-danger alert-dismissible noData col-12" role="alert" style="display: none;">
                </div>
            </table>



        </div>
    </div>



    <% include ./partials/script %>
    <script src="/javascripts/navbar.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
    <script>
        const urldata = 'http://localhost:3000/api/data/';

        const swalWithBootstrapButtons = Swal.mixin({
            customClass: {
                confirmButton: 'btn btn-success',
                cancelButton: 'btn btn-danger mr-3'
            },
            buttonsStyling: false
        })

        const generateTable = (datas) => {
            if (datas.length > 0) {
                $('table > thead, table > tbody').remove();
                $('#viewTable').append(`
                    <thead class="thead-dark">
                    <tr>
                    <th scope="col"><p class="invisible"> test </p></th>
                    <th scope="col ml-5">#</th>
                    <th scope="col">Letter</th>
                    <th scope="col">Frequency</th>
                    <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody id="tableData">

                    </tbody>
                    `);

                datas.forEach((data, index) => {
                    $('#tableData').append(`
                         <tr>
                            <th scope="col"><p class="invisible"> test </p></th>
                            <th scope="row">${index + 1}</th>
                            <td>${data.letter}</td>
                            <td>${data.frequency}</td>
                            <td>   
                            <a role="button" data-id="${data._id}" class="btn btn-success mr-1"
                                href="">Edit</a>
                            <a role="button" data-id="${data._id}" class="btn btn-danger btn-delete"
                                href="">Delete</a>
                            </td>
                        </tr>`)
                });
            } else {
                $('.noData').text('No data to show').show();
            }
        }

        const viewData = () => {
            $.ajax({
                url: urldata,
                method: 'GET'
            }).done(datas => {
                generateTable(datas);
            }).fail(response => {
                $('.noData').text('Error').show();
            })
        }

        const searchData = () => {
            $.ajax({
                url: urldata + 'search',
                method: 'POST',
                data: {
                    letter: $('#searchLetter').val(),
                    frequency: Number($('#searchFrequency').val())
                },
                dataType: 'json'
            }).done(datas => {
                generateTable(datas);
            }).fail(response => {
                $('.noData').text('Error').show();
            })
        }

        const addData = () => {
            $.ajax({
                url: urldata,
                method: 'POST',
                data: {
                    letter: $('#letter').val(),
                    frequency: $('#frequency').val()
                },
                dataType: 'json'
            }).done(response => {
                if (response.success) {
                    $('.successMessage').text(`${response.message}`).show();
                    setTimeout(() => $('.successMessage').hide(500), 2500);
                    $('#letter').val("");
                    $('#frequency').val("");
                    $('#tableData').append(`
                         <tr>
                            <th scope="col"><p class="invisible"> test </p></th>
                            <th scope="row">${count++}</th>
                            <td>${response.data.letter}</td>
                            <td>${response.data.frequency}</td>
                            <td>   
                            <a role="button" data-id="${response.data._id}" class="btn btn-success mr-1"
                                href="">Edit</a>
                            <a role="button" data-id="${response.data._id}" class="btn btn-danger btn-delete"
                                href="">Delete</a>
                            </td>
                        </tr>`);
                } else {
                    $('.failedMessage').text(response.message).show();
                }
            }).fail(response => {
                $('.failedMessage').text(response.message).show();
            })
        }

        const deleteData = (id) => {
            $.ajax({
                url: urldata + `${id}`,
                method: 'delete'
            }).done(response => {
                if (response.success) {
                    viewData();
                }
            })
        }

        $(() => {
            viewData();
            $('#dataMenu').addClass('active');
            $('.addData').click(e => {
                e.preventDefault();
                $('.beforeAdd').show();
                $('.addData').hide();
                $('.getBG').addClass('bg-light rounded');
            })

            $('.saveData').submit(e => {
                e.preventDefault();
                addData();
                $('.getBG').removeClass('bg-light rounded');
            })

            $('#cancelData').click(e => {
                e.preventDefault();
                $('.beforeAdd').hide();
                $('.addData').show();
                $('.getBG').removeClass('bg-light rounded');
            })

            $('#viewTable').on('click', '.btn-delete', function(e) {
                e.preventDefault();
                const id = $(this).attr('data-id');
                //confirmation alert
                swalWithBootstrapButtons.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    type: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, delete it!',
                    cancelButtonText: 'No, cancel!',
                    reverseButtons: true
                }).then((result) => {
                    if (result.value) {
                        swalWithBootstrapButtons.fire(
                            'Deleted!',
                            'Your data has been deleted.',
                            'success'
                        )
                        deleteData(id);
                    } else if (
                        /* Read more about handling dismissals below */
                        result.dismiss === Swal.DismissReason.cancel
                    ) {
                        swalWithBootstrapButtons.fire(
                            'Cancelled',
                            'Data not deleted',
                            'error'
                        )
                    }
                })


            })

        })  
    </script>

</body>

</html>